@model DemoBlog.DataAccess.EntityModel.Blog
<h4>Write a Blog</h4>
<hr style="border-color:black" />
<div class="row">


    @using (Html.BeginForm("Create", "Blog", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <div class="form-group">
            @Html.LabelFor(m => m.Subject, new { @class = "col-md-2 control-label" })
            <div class="col-md-12">
                @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", @style = "max-width:700px" })
                @Html.ValidationMessageFor(m => m.Subject)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.BlogText, new { @class = "col-md-2 control-label" })
            <div class="col-md-12">
                @Html.TextAreaFor(m => m.BlogText, new { rows = 30, @class = "form-control", @style="max-width:700px" })
                @Html.ValidationMessageFor(m => m.BlogText)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    }
</div>
<br />
<br />
<br />
<br />
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}